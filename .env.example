# Telegram Bot 配置
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Gemini API 配置
OPENAI_API_KEY=your_gemini_api_key_here
OPENAI_BASE_URL=https://generativelanguage.googleapis.com/v1beta
OPENAI_MODEL=gemini-2.5-flash
AI_PROVIDER=openai   # AI提供商类型: openai, gemini, claude

# 币安 API 配置（可选，仅获取K线数据无需API Key）
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_secret_here

# 服务配置
PORT=3000
NODE_ENV=development

# 日志配置
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_FILES=5

# 时区配置
# 支持标准时区格式，如 'Asia/Shanghai', 'America/New_York', 'Europe/London' 等
TIMEZONE=Asia/Shanghai

# 并发控制配置
# 全局最大并发分析数量（1-100之间，默认10）
# 每个群同时只能进行一个分析，不同群之间可并发
MAX_CONCURRENT_ANALYSIS=10

# 新成员欢迎消息配置
# 是否为新加入群聊的用户发送欢迎消息（true/false，默认true）
ENABLE_NEW_MEMBER_WELCOME=true